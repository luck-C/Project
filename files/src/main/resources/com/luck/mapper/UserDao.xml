<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.luck.dao.UserDao">

    <!--自定义map-->
    <resultMap id="userMap" type="User">
        <id column="uid" property="id"></id>
        <result column="username" property="username"></result>
        <!--角色信息-->
        <collection property="roles" javaType="list" ofType="Role">
            <id column="id" property="id"></id>
            <result column="rname" property="name"></result>
        </collection>
    </resultMap>
    <!--根据用户名查角色-->
    <select id="findRolesByUserName" parameterType="String" resultMap="userMap">
        select u.id uid,u.username,r.id,r.name rname
        from t_user u
                 left join t_user_role ur
                           on u.id=ur.userid
                 left join t_role r
                           on ur.roleid=r.id
        where u.username=#{username}
    </select>
    <!--login-->
    <select id="login" parameterType="User" resultType="User">
        select id,username,password,role,salt
        from t_user
        where username=#{username} and password=#{password}
    </select>
    <!--通过用户名查找用户-->
    <select id="findByUserName" parameterType="String" resultType="User">
        select id,username,password,role,salt
        from t_user
        where username=#{username}
    </select>

    <!--用户注册-->
    <insert id="register" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into t_user values (#{id},#{username},#{password},#{role},#{salt})
    </insert>
</mapper>
