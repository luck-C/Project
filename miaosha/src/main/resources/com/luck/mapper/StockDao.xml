<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.luck.dao.StockDao">
    <!--查询库存-->
    <select id="checkStock" parameterType="Integer" resultType="com.luck.entity.Stock">
        select id,name,count,sale,version
        from stock
        where id=#{id}
    </select>
    <select id="selectById" resultType="com.luck.entity.Stock">
        select * from stock where id = #{id}
    </select>
    <!--更新库存-->
    <update id="update" parameterType="com.luck.entity.Stock">
        update stock
        set
            sale=sale+1,
            version=version+1,
            last_update_date = #{lastUpdateDate}
        where
              id=#{id} and
            version=#{version}
    </update>
</mapper>
